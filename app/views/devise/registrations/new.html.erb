<div class="grid-container">
  <div class="grid-x grid-margin-x">
    <div class="cell form">
      <div class="">

        <div class="font-slab text1 weight7">Sign Up</div>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div>
          <%= f.label :email, class: "weight3 text4" %><p><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rails-field" %>
          </div>

          <div class="field">
            <%= f.label :password, class: "weight3 text4" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "rails-field" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, class: "weight3 text4" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "rails-field" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign Up", class: "button radius" %>
          </div>

          <div class="actions">
            <%= render "devise/shared/links", class: "button radius" %>
          </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>
